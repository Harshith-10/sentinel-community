{
  "name": "typescript",
  "displayName": "TypeScript",
  "extension": ".ts",
  "command": "node",
  "args": [
    "dist/main.js"
  ],
  "timeout": 30000,
  "compile": {
    "timeout": 10000,
    "command": "tsc",
    "args": [
      "{file}",
      "--outDir",
      "dist",
      "--target",
      "es2020",
      "--module",
      "commonJs",
      "--esModuleInterop"
    ]
  }
}