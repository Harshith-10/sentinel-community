{
  "name": "remote-code-execution",
  "version": "1.0.0",
  "description": "Remote code execution service",
  "main": "dist/server.js",
  "scripts": {
    "build": "tsc",
    "start": "node dist/server.js",
    "start:master": "node dist/master.js",
    "start:executor": "node dist/executor-worker.js",
    "dev": "ts-node-dev --respawn --transpile-only src/server.ts",
    "dev:master": "ts-node-dev --respawn --transpile-only src/master.ts",
    "dev:executor": "ts-node-dev --respawn --transpile-only src/executor-worker.ts",
    "dev:watch": "tsc --watch",
    "docker:build": "docker build -t code-executor .",
    "docker:run": "docker run -p 8910:8910 code-executor",
    "docker:compose": "docker-compose up --build",
    "docker:compose:dev": "docker-compose -f docker-compose.dev.yml up --build",
    "docker:compose:down": "docker-compose down",
    "docker:compose:down:dev": "docker-compose -f docker-compose.dev.yml down",
    "docker:scale:python": "docker-compose up -d --scale python-executor-1=2 --scale python-executor-2=2",
    "docker:scale:java": "docker-compose up -d --scale java-executor-1=2 --scale java-executor-2=2",
    "lint": "eslint src/**/*.ts",
    "lint:fix": "eslint src/**/*.ts --fix",
    "test:architecture": "node test-architecture.js",
    "docker:logs": "docker-compose logs -f",
    "docker:logs:master": "docker-compose logs -f master"
  },
  "dependencies": {
    "bull": "^4.12.2",
    "cors": "^2.8.5",
    "express": "^4.18.2",
    "express-rate-limit": "^6.10.0",
    "helmet": "^7.0.0",
    "node-fetch": "^3.3.2",
    "redis": "^4.6.8",
    "uuid": "^9.0.0"
  },
  "devDependencies": {
    "@types/cors": "^2.8.0",
    "@types/express": "^4.17.0",
    "@types/node": "^20.19.8",
    "@types/uuid": "^9.0.0",
    "@typescript-eslint/eslint-plugin": "^6.21.0",
    "@typescript-eslint/parser": "^6.21.0",
    "eslint": "^8.0.0",
    "nodemon": "^3.0.1",
    "ts-node": "^10.9.0",
    "ts-node-dev": "^2.0.0",
    "typescript": "^5.0.0"
  }
}
